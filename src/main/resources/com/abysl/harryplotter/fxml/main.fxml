<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainBox" minHeight="400.0" minWidth="640.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abysl.harryplotter.MainController">
  <children>
      <HBox>
         <children>
          <MenuBar HBox.hgrow="ALWAYS">
            <menus>
              <Menu mnemonicParsing="false" text="File">
                <items>
                  <MenuItem mnemonicParsing="false" text="New" />
                  <MenuItem mnemonicParsing="false" text="Open…" />
                  <Menu mnemonicParsing="false" text="Open Recent" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Close" />
                  <MenuItem mnemonicParsing="false" text="Save" />
                  <MenuItem mnemonicParsing="false" text="Save As…" />
                  <MenuItem mnemonicParsing="false" text="Revert" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Preferences…" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Quit" />
                </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Edit">
                <items>
                  <MenuItem mnemonicParsing="false" text="Undo" />
                  <MenuItem mnemonicParsing="false" text="Redo" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Cut" />
                  <MenuItem mnemonicParsing="false" text="Copy" />
                  <MenuItem mnemonicParsing="false" text="Paste" />
                  <MenuItem mnemonicParsing="false" text="Delete" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Select All" />
                  <MenuItem mnemonicParsing="false" text="Unselect All" />
                </items>
              </Menu>
              <Menu mnemonicParsing="false" text="Help">
                <items>
                  <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
                </items>
              </Menu>
            </menus>
          </MenuBar>
            <Button fx:id="themeToggle" maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" onAction="#onToggleTheme" prefHeight="25.0" prefWidth="25.0" text="  ">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Jobs">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <VBox maxWidth="350.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <ListView fx:id="jobsView" maxWidth="350.0" minWidth="200.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                                    <HBox alignment="CENTER" spacing="10.0">
                                       <children>
                                          <Button mnemonicParsing="false" onAction="#onStopAll" text="Stop All" />
                                          <Button mnemonicParsing="false" onAction="#onStartAll" text="Start All" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox minWidth="140.0" prefHeight="326.0" prefWidth="140.0" spacing="19.0">
                                 <children>
                                    <Label text="Name" />
                                    <Label text="* Temp Directory" />
                                    <Label text="* Destination Directory" />
                                    <Label text="Number of Threads" />
                                    <Label text="Chia Key to Use" />
                                    <CheckBox fx:id="stopAfter" mnemonicParsing="false" onAction="#onStopAfter" text="Stop after" />
                                    <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <Label text="Current Status" />
                                          <Label text="Last Plot Time" />
                                          <Label text="Average Plot Time" />
                                          <Label text="Total Plots Created" />
                                          <Label text="Estimated Plots Per Day" />
                                          <Label text="Plots in last 24 hours" />
                                          <HBox maxHeight="25.0" minHeight="25.0" prefHeight="25.0" prefWidth="200.0" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              <VBox prefHeight="306.0" prefWidth="228.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <TextField fx:id="jobName" promptText="My Plot 1" />
                                    <HBox spacing="10.0">
                                       <children>
                                          <TextField fx:id="tempDir" promptText="C:\Path\To\SSD\" HBox.hgrow="ALWAYS" />
                                          <Button mnemonicParsing="false" onAction="#onTempBrowse" text="Browse" />
                                       </children>
                                    </HBox>
                                    <HBox spacing="10.0">
                                       <children>
                                          <TextField fx:id="destDir" promptText="C:\Path\To\HDD\" HBox.hgrow="ALWAYS" />
                                          <Button mnemonicParsing="false" onAction="#onDestBrowse" text="Browse" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <TextField fx:id="threads" prefHeight="25.0" prefWidth="35.0" promptText="2" />
                                          <Label minWidth="85.0" text="Max Ram (MiB)" />
                                          <TextField fx:id="ram" prefHeight="25.0" prefWidth="101.0" promptText="6750" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox spacing="10.0">
                                       <children>
                                          <Button fx:id="addKey" minWidth="65.0" mnemonicParsing="false" onAction="#onAddKey" prefWidth="65.0" text="Add Key" />
                                          <ComboBox fx:id="chiaKeys" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <TextField fx:id="numberPlots" disable="true" prefHeight="25.0" prefWidth="37.0" promptText="10" />
                                          <Label text="Plots" />
                                          <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Button mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
                                                <Button fx:id="save" mnemonicParsing="false" onAction="#onSave" text="Save" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </HBox>
                                    <HBox alignment="BOTTOM_RIGHT" prefHeight="155.0" prefWidth="260.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <VBox alignment="BOTTOM_LEFT" minWidth="100.0" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                                             <children>
                                                <Label fx:id="currentStatus" text="Not Running" />
                                                <Label fx:id="lastPlotTime" text="6 hr 50 s (21650s)" />
                                                <Label fx:id="averagePlotTime" text="6 hr 30 s (21630)" />
                                                <Label fx:id="totalPlotsCreated" text="3" />
                                                <Label fx:id="estimatedPlotsDay" text="1.7" />
                                                <Label fx:id="averagePlotsDay" text="1.8" />
                                                <HBox maxHeight="25.0" minHeight="25.0" prefHeight="25.0" prefWidth="200.0" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <TextArea fx:id="logs" editable="false" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                                                <HBox alignment="CENTER" spacing="10.0">
                                                   <children>
                                                      <Button mnemonicParsing="false" onAction="#onStop" text="Stop" />
                                                      <Button mnemonicParsing="false" onAction="#onStart" text="Start" />
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Stats">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
  </children>
</VBox>
