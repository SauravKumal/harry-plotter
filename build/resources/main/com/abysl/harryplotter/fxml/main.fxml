<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainBox" minHeight="400.0" minWidth="640.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abysl.harryplotter.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Jobs">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <VBox fx:id="jobsBox" maxWidth="350.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <ListView fx:id="jobs" maxWidth="350.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="326.0" prefWidth="140.0" spacing="20.0">
                                 <children>
                                    <Label text="Name" />
                                    <Label text="* Temp Directory" />
                                    <Label text="* Destination Directory" />
                                    <Label text="Number of Threads" />
                                    <Label text="Chia Key" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="306.0" prefWidth="228.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <TextField fx:id="jobName" promptText="My Plot 1" />
                                    <HBox spacing="10.0">
                                       <children>
                                          <TextField fx:id="tempDir" promptText="C:\Path\To\SSD\" HBox.hgrow="ALWAYS" />
                                          <Button fx:id="selectTempDir" mnemonicParsing="false" text="Browse" />
                                       </children>
                                    </HBox>
                                    <HBox spacing="10.0">
                                       <children>
                                          <TextField fx:id="destDir" promptText="C:\Path\To\HDD\" HBox.hgrow="ALWAYS" />
                                          <Button fx:id="selectDestDir" mnemonicParsing="false" text="Browse" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <TextField fx:id="threads" prefHeight="25.0" prefWidth="35.0" promptText="2" />
                                          <Label text="Max Ram" />
                                          <TextField fx:id="ram" prefHeight="25.0" prefWidth="101.0" promptText="6750 MiB" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox>
                                       <children>
                                          <ComboBox fx:id="chiaKey" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="BOTTOM_RIGHT" prefHeight="155.0" prefWidth="260.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <Button fx:id="save" mnemonicParsing="false" text="Save" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Status">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <VBox fx:id="statusJobsBox" maxWidth="350.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <ListView maxWidth="350.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                                    <HBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
                                       <children>
                                          <Button fx:id="stopAll" mnemonicParsing="false" text="Stop All" />
                                          <Button fx:id="startAll" mnemonicParsing="false" text="Start All" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox prefHeight="326.0" spacing="20.0">
                                 <children>
                                    <Label text="Current Status" />
                                    <Label text="Last Plot Time" />
                                    <Label text="Average Plot Time" />
                                    <Label text="Total Plots Created" />
                                    <Label text="Estimated Plots Per Day" />
                                    <Label text="Average Plots Per Day" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="326.0" spacing="20.0">
                                 <children>
                                    <Label fx:id="currentStatus" text="x" />
                                    <Label fx:id="lastPlotTime" text="x" />
                                    <Label fx:id="averagePlotTime" text="x" />
                                    <Label fx:id="totalPlotsCreated" text="x" />
                                    <Label fx:id="estimatedPlotsDay" text="x" />
                                    <Label fx:id="averagePlotsDay" layoutX="10.0" layoutY="158.0" text="x" />
                                 </children>
                              </VBox>
                              <HBox alignment="BOTTOM_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="stop" mnemonicParsing="false" text="Stop" />
                                    <Button fx:id="start" mnemonicParsing="false" text="Start" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </AnchorPane>
               </content>
            </Tab>
          <Tab text="Stats">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
  </children>
</VBox>
